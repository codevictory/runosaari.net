<h1>Listing Performances</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for performance <- @performances do %>
    <tr>
      <td><%= performance.name %></td>
      <td><%= performance.desc %></td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "Hallinta", to: Routes.admin_performance_path(@conn, :admin) %></span>
