<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Joku kentistä on tyhjä.</p>
    </div>
  <% end %>

  <%= label f, :content, "Sisältö" %>
  <%= textarea f, :content %>
  <%= error_tag f, :content %>

  <%= label f, :link, "Linkki" %>
  <%= text_input f, :link %>
  <%= error_tag f, :link %>

  <%= label f, :seqnum, "Prioritetti (1 on korkein)" %>
  <%= number_input f, :seqnum %>
  <%= error_tag f, :seqnum %>

  <div>
    <%= submit "Tallenna" %>
  </div>
<% end %>
